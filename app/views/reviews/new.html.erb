<h1 class="mb-4">New Review</h1>

<%= simple_form_for @review, url: restaurant_reviews_path(@review.restaurant), html: { class: 'form-horizontal' } do |form| %>
  <div class="form-group">
    <%= form.label :rating, 'Rate this restaurant (out of 5)', class: 'form-label' %>
    <%= form.select :rating, options_for_select((1..5).to_a, @review.rating), { include_blank: 'Select Rating' }, class: 'form-control' %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :content, 'Write your review', class: 'form-label' %>
    <%= form.text_area :content, rows: 5, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.button :submit, 'Add Review', class: 'btn btn-primary' %>
  </div>
<% end %>
